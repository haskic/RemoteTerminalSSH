
@{
    Layout = "Header";
}
@model TerminalMessage

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Terminal</title>
    <link rel="stylesheet" href="~/css/terminalPage.css" />
    <script  src="~/js/WebSockets.js"></script>
    <script src="~/js/signalr/dist/browser/signalr.min.js"></script>

</head>
<body>
    <div class="container">
        <div class="console-container">
            <div class="top-border"><p id="terminal-window-title">Desktop-1241/5125 Terminal</p></div>
            <div class="console-box">
                <div class="console-line">
                    <div class="response-line">
                        @if (Model.Error == null)
                        {
                            <div class="response-line" style="color:green;margin-top:10px;margin-bottom: 10px;">
                                @Model.Success.SuccessText
                            </div>
                        }
                        else
                        {
                            <div class="response-line" style="color:red;margin-top:10px;margin-bottom: 10px;">
                                @Model.Error.ErrorText
                            </div>
                        }

                                        <div class="static-console">darky@Abhishek-Linux-Machine:~$</div>
                                        <div class="editable-command" contenteditable="true" spellcheck="false"></div>
                                    </div>
                
            </div>
        </div>
    </div>
    <script defer src="~/js/terminal.js"></script>

</body>
</html>
